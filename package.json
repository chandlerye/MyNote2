{
  "name": "mynote2",
  "version": "1.0.0",
  "description": "一个支持本地和云端模式的笔记软件",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:all && electron-builder",
    "build:all": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:exe": "npm run build:all && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "notes",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.mynote2.app",
    "productName": "MyNote2",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "sign": null
    },
    "forceCodeSigning": false
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "mysql2": "^3.15.3",
    "quill": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0"
  }
}
